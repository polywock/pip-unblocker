{
  "name": "PiP Unblocker",
  "version": "0.2",
  "description": "Unblock Picture-in-Picture functionality.",
  "manifest_version": 2,
  "permissions": ["webRequest", "webRequestBlocking", "storage", "https://*/*", "http://*/*"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": { 
    "128": "icon128.png" 
  },
  "background": {
    "scripts": ["background.js"]
  }
}