{
  "name": "PiP Unblocker",
  "version": "0.4",
  "description": "Clear Permissions-Policy headers to unblock features like Picture-in-Picture.",
  "manifest_version": 3,
  "host_permissions": ["https://*/*", "http://*/*"],
  "permissions": ["declarativeNetRequestWithHostAccess"],
  "icons": { 
    "128": "icon128.png" 
  },
  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "rules",
      "enabled": true,
      "path": "rules.json"
    }
  ]}
}